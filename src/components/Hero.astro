---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<section class="px-10 pt-12 pb-20 grid grid-cols-1 lg:grid-cols-2 gap-10">
  <div class="flex flex-col order-2 lg:order-1">
    <h1 class="text-pblack">&#129512; almost random</h1>
    <p class="text-4xl lg:text-6xl font-bold">
      foundations settle, towers rise
    </p>
    <p class="mb-6">
      Collection of my musings, experiments in market, insights from ventures,
      and "recipes" from my builds.
    </p>
    <a
      rel="noopener noreferrer"
      href="https://jramma.com"
      target="_blank"
      class="bg-pgreen px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition w-48 text-center"
    >
      Work together
    </a>
  </div>
  <div class="flex items-center justify-center p-10 group order-1 lg:order-2">
    <div
      class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
    >
      <div
        class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm"
      >
        <Icon name="solar:laptop-line-duotone" />
      </div>
      <div
        class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black"
      >
        <Icon name="solar:test-tube-bold" />
      </div>
      <div
        class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black"
      >
        <Icon name="solar:bolt-circle-bold" />
        <p>ac</p>
      </div>
      <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
        <Image
          class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
          src={images["/src/assets/hero.png"]()}
          alt="Sorolla, photo wiki"
        />
      </div>
    </div>
  </div>
</section>
